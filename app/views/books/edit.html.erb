<% if @book.errors.any? %>
<h2>error</h2>
<% @book.errors.full_messages.each do |message| %>
  <div class="form-error">
    <%= message %>
  </div>
<% end %>
<% end %>



<h1>Editing Book</h1>
<%= form_with model:@book, local: true do |f| %>
  <h4>title</h4>
  <%= f.text_field :title %>
  <h4>body</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Update Book' %>
<% end %>
  
<%= link_to 'Show', book_path(@book) %>
|
<%= link_to 'Back', books_path(@books) %>